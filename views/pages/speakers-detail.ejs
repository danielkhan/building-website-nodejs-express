<div class="container mt-4">
   <div class="row">
      <div class="col-md-8">
         <article class="speakerslist maincontent">
            <h1 class="speakerslist-title"><%=speaker.title%></h1>
            <div class="speakerslist-name">
               with
               <a href="/<%=speaker.shortname%>.html"><%=speaker.name%></a>
            </div>
            <p class="speakerslist-info mt-2">
               <a href="/<%=speaker.shortname%>.html"> </a>
               <img
                  class="speakerslist-img img-fluid"
                  src="/images/speakers/<%=speaker.shortname%>.jpg"
                  alt="Photo of <%=speaker.name%> Post"
               />
            </p>
            <%-speaker.description%>
            <p></p>
         </article>
      </div>
      <aside class="col-md-4">
         <article class="sidebar">
            <h1 class="sidebar-title">Artwork on display</h1>
            <p class="sidebar-body">
               While you attend the conference, head over to our gallery where you can check out
               some of the work from our speakers.
            </p>
            <%- include('./partials/gallery') %>
         </article>
      </aside>
   </div>
</div>
